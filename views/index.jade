      #apply.w3-edu-main.content
        .w3-edu-head
          h3 Apply Now!
        .w3-online-edu-grids
          .col-md-6.w3-online-course-grid
            .w3-online-course-left-head
              h3 6 slots remaining
              h4 Apply Now
            .agileits-timer
              .clock
                .column.days
                  #days.timer
                  .text DAYS
                .timer.days
                .column
                  #hours.timer
                  .text HOURS
                .timer
                .column
                  #minutes.timer
                  .text MINUTES
                .timer
                .column
                  #seconds.timer
                  .text SECONDS
          .col-md-6.w3-edu-online-form.w3_mail_grids
            h3 Your details
            form#course_application
              .w3_agile_mail_grid
                input#form1_name(type='text', placeholder='Your Name', name='name')
                input#form1_email(type='email', placeholder='Your Email', name='email')
                input#form1_phone(type='tel', placeholder='Your Phone Number', name='phone')
                select#category1(name='course')
                  option(value='Python + Machine Learning') Python + Machine Learning
                  option(value='Python Backend Development') Python Backend Development
                textarea#form1_message(placeholder='Your Message', name='message')
                input(type='submit', value='Send')
          .clearfix
