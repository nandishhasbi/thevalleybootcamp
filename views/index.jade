      // count
    .count-agileits
      .count-grids
        .count-bgcolor-w3ls
          .col-md-4.count-grid
            i.fa.fa-graduation-cap(aria-hidden='true')
            .count.hvr-bounce-to-bottom
              .numscroller.numscroller-big-bottom(data-slno='1', data-min='0', data-max='3', data-delay='.5', data-increment='1') 3
              span
              h5 Completed Batches
          .col-md-4.count-grid
            i.fa.fa-clock-o(aria-hidden='true')
            .count.hvr-bounce-to-bottom
              .numscroller.numscroller-big-bottom(data-slno='1', data-min='0', data-max='240', data-delay='.5', data-increment='40') 240
